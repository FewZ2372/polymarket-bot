# ===========================================
# POLYMARKET BOT - CONFIGURATION
# ===========================================
# Copy this file to .env and fill in your values

# ----- Wallet Configuration -----
# Your Ethereum private key (for Polygon network)
# NEVER share this or commit to git
PRIVATE_KEY=your_private_key_here

# ----- Polymarket API -----
# Optional: Get from https://polymarket.com/settings/api
POLYMARKET_API_KEY=
POLYMARKET_API_SECRET=
POLYMARKET_API_PASSPHRASE=

# ----- Alert Configuration -----
WHATSAPP_TARGET=+5491164079874
WHATSAPP_GATEWAY_URL=http://localhost:3000/req

# ----- Trading Limits (HIGH FREQUENCY MODE) -----
# Maximum USDC per single trade (small for high frequency)
MAX_TRADE_AMOUNT=2.0
# Maximum total USDC exposure per day
MAX_DAILY_EXPOSURE=100.0
# Minimum score to consider trading (lower = more trades)
MIN_SCORE_TO_TRADE=50
# Minimum spread % for auto-trade
MIN_SPREAD_TO_TRADE=0.02

# ----- Auto Trading -----
# Enable automatic trading (true/false)
AUTO_TRADE_ENABLED=true
# Dry run mode - simulates trades without executing (start with true!)
DRY_RUN=true

# ----- Server -----
PORT=8080
HOST=0.0.0.0

# ----- Scan Interval -----
# Seconds between scans (90 = more frequent for high frequency)
SCAN_INTERVAL=90
